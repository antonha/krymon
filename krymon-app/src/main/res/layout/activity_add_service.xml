<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="krymon.AddServiceActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  tools:context="net.antonha.krymon.AddBackendActivity" android:orientation="vertical">
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/add_service_name"
                  android:hint="Name"
                  android:inputType="text"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >
            <Spinner android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:id="@+id/add_service_protocol_spinner"
            />
            <EditText android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/add_service_url_text"
                      android:hint="Service URL"
                      android:inputType="textUri"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      style="@style/Widget.AppCompat.ButtonBar"
        >
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_weight="1" android:text="Cancel" android:id="@+id/add_service_cancel"/>
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:layout_weight="1" android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:text="Add" android:id="@+id/add_service_add"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
